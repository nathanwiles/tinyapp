<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_head') %>
    <title>URL - TinyApp Example</title>
  </head>

  <body>
    <%- include('partials/_header') %>
    <div class="card text-center">
      <div class="card-header"></div>
      <div class="card-body">
        <h5 class="card-title">TinyURL for <%= longURL %></h5>
        <p class="card-text">
          Tiny URL ID:
          <a class="nav_item nav-link" href="/u/<%= urlId %>"><%= urlId %></a>
        </p>
      </div>
      <div class="card-footer text-muted">
        <h4>Edit:</h4>
        <form
          class="form"
          action="/urls/<%= urlId %>?_method=PUT"
          method="POST"
        >
          <div class="form-group mb-2">
            <label for="longURL">New URL:</label>
            <input
              class="form-center"
              type="text"
              name="longURL"
              placeholder="http://"
              style="width: 300px; margin: 1em"
            />
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <%- include('partials/_bootstrap_js') %>
  </body>
</html>
