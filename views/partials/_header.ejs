<header>
  <nav class="navbar navbar-expand-md navbar-dar bg-success">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav_item nav-link" href="/urls">My URLs</a>
        <a class="nav_item nav-link" href="/urls/new">Add New URL</a>
      </div>
    </div>

    <% if(email) { %>
    <div class="navbar-nav">
      <div class="nav_item nav-link">Logged in as <%= email %></div>
      <form
      class="form-inline justify-content-right"
      action="/logout"
      method="POST">
      <button type="submit" class = "btn btn-primary">Logout</a></form>
    
    </div>
    <% } else { %>
    <form
      class="form-inline justify-content-right"
      action="/login"
      method="POST"
    >
      <input
        class="text-muted text-center"
        type="email"
        name="email"
        placeholder="Email"
        style="width: 150px; margin: 1em"
      />

      <input
        class="text-muted text-center"
        type="password"
        name="password"
        placeholder="Password"
        style="width: 150px; margin: 1em"
      />

      <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <% } %>
  </nav>
